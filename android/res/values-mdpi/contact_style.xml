<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme.Contact">
        <!--<item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>-->
    </style>

    <style name="AppBaseTheme.Contact.PresenceActive" parent="BaseTheme.Contact">
        <item name="android:background">@drawable/presence_indicator_shape_active</item>
    </style>

    <style name="AppBaseTheme.Contact.PresenceInactive" parent="BaseTheme.Contact">
        <item name="android:background">@drawable/presence_indicator_shape_inactive</item>
    </style>

    <style name="AppBaseTheme.Contact.Name" parent="BaseTheme.Contact">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppBaseTheme.Contact.UnreadMessagesChatItem" parent="BaseTheme.Contact">
        <item name="android:text">55</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppBaseTheme.Contact.UnreadMessagesBadge" parent="BaseTheme.Contact">
      <item name="android:textColor">@android:color/white</item>
      <item name="android:layout_width">18dp</item>
      <item name="android:layout_height">18dp</item>
      <item name="android:textSize">13sp</item>
      <item name="android:gravity">center</item>
    </style>

    <style name="AppBaseTheme.Contact.LastMessage" parent="BaseTheme.Contact">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@android:color/secondary_text_dark</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">6sp</item>
    </style>

    <style name="AppBaseTheme.Contact.CommonGroup" parent="BaseTheme.Contact">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@android:color/secondary_text_dark</item>
        <item name="android:textSize">3pt</item>
    </style>

    <style name="AppBaseTheme.Contact.GroupContactStatus" parent="BaseTheme.Contact">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@android:color/secondary_text_dark</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">3pt</item>
    </style>
</resources>
