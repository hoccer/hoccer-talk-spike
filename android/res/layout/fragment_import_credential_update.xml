<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_margin="10dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:id="@+id/tv_update_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hoccer XO has been detected.\nIf you want to import your user credentials now please update Hoccer XO from the playstore."
            android:autoLink="all"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"/>

    <Button
            android:id="@+id/btn_open_playstore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open playstore"/>

    <TextView
            android:id="@+id/tv_create_new_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="If you want to create a new user please click here:"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"/>

    <Button
            android:id="@+id/btn_create_new_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create new user"/>

</LinearLayout>
