<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/ll_import_credentials"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

        <TextView
                android:id="@+id/tv_import__credentials"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Hoccer XO has been detected.\nIf you want to import your user credentials now please click here:"/>
        <Button
                android:id="@+id/btn_import_credentials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Import Credentials"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_update_information"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

        <TextView
                android:id="@+id/tv_update_information"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Hoccer XO has been detected.\nIf you want to import your user credentials now please
                update Hoccer XO from the playstore first by following this link:\n\n
                https://play.google.com/store/apps/details?id=com.hoccer.xo.release"/>

        <Button
                android:id="@+id/btn_open_playstore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open playstore"/>
    </LinearLayout>

    <TextView
            android:id="@+id/tv_create_new_client"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="If you want to create a new user please click here:"/>

    <Button
            android:id="@+id/btn_create_new_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create new user"/>

</LinearLayout>