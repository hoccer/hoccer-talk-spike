<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:gravity="center|start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <include android:layout_width="45dp"
             android:layout_height="45dp"
             style="@style/AppBaseTheme.Group.Members.MemberAvatar"
             layout="@layout/view_avatar_presence"/>

    <CheckedTextView
            android:id="@+id/contact_name_checked"
            android:text="@string/contact_name_new_client"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkMark="@drawable/appbasetheme_btn_check_holo_light"
            android:checked="false"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            style="@style/AppBaseTheme.Group.Members.MemberName"/>

</LinearLayout>
