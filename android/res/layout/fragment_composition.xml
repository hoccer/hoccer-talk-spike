<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messaging_composer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/xo_main_background">

  <View
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:background="@color/xo_compose_message_divider"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="top"
      android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp">

      <ImageButton
          android:id="@+id/ib_messaging_composer_add_attachment"
          android:src="@drawable/ic_attachment"
          style="?android:attr/borderlessButtonStyle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:scaleType="centerInside"/>

      <Button android:id="@+id/b_messaging_composer_add_attachments"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              style="?android:attr/borderlessButtonStyle"
              android:background="@drawable/circle"
              android:textColor="@color/xo_compose_message_textColor"
              android:visibility="gone"
              android:layout_margin="4dp"
          />

    </RelativeLayout>

    <EditText
        android:id="@+id/messaging_composer_text"
        android:inputType="textShortMessage|textMultiLine"
        android:hint="@string/composition_text_hint"
        android:singleLine="false"
        android:maxLines="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        />

    <ImageButton
        android:id="@+id/btn_messaging_composer_send"
        android:src="@drawable/ic_light_social_send_now"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"/>

  </LinearLayout>

</LinearLayout>
