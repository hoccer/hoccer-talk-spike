<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

  <com.hoccer.xo.android.view.SquaredImageView
      android:id="@+id/thumbImage"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="fitCenter"/>

  <com.hoccer.xo.android.view.SquaredRelativeLayout
      android:id="@+id/squared_rl_selected"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/black_transparency_50_percent">

    <ImageView
        android:id="@+id/itemCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_img_select"
        android:padding="10dp"/>
  </com.hoccer.xo.android.view.SquaredRelativeLayout>


</RelativeLayout>