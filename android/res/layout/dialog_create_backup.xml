<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="20dp">

    <TextView android:id="@+id/tv_save_backup_target"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="@android:style/TextAppearance.Medium"
              android:layout_margin="5dp"/>

    <CheckBox android:id="@+id/cb_include_attachments"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/create_backup_include_attachments"
              android:textAppearance="@android:style/TextAppearance.Small"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/enter_password"
                  android:textAppearance="@android:style/TextAppearance.Medium"/>

        <EditText android:id="@+id/et_password"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:singleLine="true"
                  android:maxLines="1"
                  android:inputType="textPassword"/>
    </LinearLayout>


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/create_backup_dont_forget_password"
              android:padding="5dp"/>

</LinearLayout>