<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
            android:id="@android:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contacts_tab_groups"
            style="@style/ActionBarTabText.Solid.AppBaseTheme"/>

    <TextView
            android:id="@+id/tv_contact_invite_notification_badge"
            android:layout_marginLeft="5dp"
            android:text="2"
            android:background="@drawable/unread_messages"
            android:visibility="gone"
            style="@style/AppBaseTheme.Contact.UnreadMessages"/>

</LinearLayout>
