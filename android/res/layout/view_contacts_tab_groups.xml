<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

  <TextView
      android:id="@android:id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/contacts_tab_groups"
      android:layout_marginTop="10dp"
      android:paddingBottom="10dp"
      android:layout_centerHorizontal="true"
      style="@style/ActionBarTabText.Solid.AppBaseTheme"/>

  <TextView
      android:id="@+id/tv_contact_invite_notification_badge"
      android:text="2"
      android:background="@drawable/unread_messages"
      android:layout_alignTop="@android:id/title"
      android:layout_alignRight="@android:id/title"
      android:layout_marginRight="-35dp"
      android:layout_marginTop="-10dp"
      android:visibility="gone"
      style="@style/AppBaseTheme.Contact.UnreadMessages"/>

</RelativeLayout>