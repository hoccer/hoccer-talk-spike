<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme.Contact">
    </style>

    <style name="AppBaseTheme.Contact.Avatar" parent="BaseTheme.Contact">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="AppBaseTheme.Contact.Name" parent="BaseTheme.Contact">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppBaseTheme.Contact.UnreadMessagesChatItem" parent="BaseTheme.Contact">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">55</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppBaseTheme.Contact.UnreadMessagesBadge" parent="BaseTheme.Contact">
      <item name="android:textColor">@android:color/white</item>
      <item name="android:layout_width">18dp</item>
      <item name="android:layout_height">18dp</item>
      <item name="android:textSize">13sp</item>
      <item name="android:gravity">center</item>
    </style>

    <style name="AppBaseTheme.Contact.LastMessage" parent="BaseTheme.Contact">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/last_message</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppBaseTheme.Contact.CommonGroup" parent="BaseTheme.Contact">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@android:color/secondary_text_dark</item>
        <item name="android:textSize">6pt</item>
    </style>

    <style name="AppBaseTheme.Contact.GroupContactStatus" parent="BaseTheme.Contact">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@android:color/secondary_text_dark</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">6pt</item>
    </style>
</resources>
