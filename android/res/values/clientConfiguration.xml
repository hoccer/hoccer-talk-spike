<?xml version="1.0" encoding="utf-8"?>
<resources>
    <string-array name="dialog_attachment_choose">
        <item>@string/dialog_attachment_choose_reselect_option</item>
        <item>@string/dialog_attachment_choose_discard_option</item>
    </string-array>

    <!--The app's URL scheme for registration links-->
    <string name="url_scheme">hxo://</string>

    <!--Servers-->
    <string-array name="servers_production">
        <item name="1">wss://talkserver.talk.hoccer.de:8443/</item>
    </string-array>

    <!--Development Mode Only-->
    <string-array name="servers_development">
        <item name="1">wss://talkserver.talk.hoccer.de:8443/</item>
        <item name="2">ws://test1.talk.hoccer.de/</item>
    </string-array>

    <string-array name="databases_development">
        <item name="1">hoccer-talk.db</item>
        <item name="2">hoccer-talk-1.db</item>
        <item name="3">hoccer-talk-2.db</item>
        <item name="4">hoccer-talk-3.db</item>
    </string-array>

    <string-array name="database_values_development">
        <item name="1">hoccer-talk.db</item>
        <item name="2">hoccer-talk-1.db</item>
        <item name="3">hoccer-talk-2.db</item>
        <item name="4">hoccer-talk-3.db</item>
    </string-array>

    <!--Keysize-->
    <string-array name="keysizes">
        <item name="1024">1024 Bit</item>
        <item name="2048">2048 Bit</item>
        <item name="3072">3072 Bit</item>
        <item name="4096">4096 Bit</item>
    </string-array>

    <string-array name="keysize_values">
        <item name="1024">1024</item>
        <item name="2048">2048</item>
        <item name="3072">3072</item>
        <item name="4096">4096</item>
    </string-array>

    <!--Protocol JSON/BSON-->
    <bool name="use_bson_protocol">true</bool>
    <string name="protocol_bson">com.hoccer.talk.v2.bson</string>
    <string name="protocol_json">com.hoccer.talk.v2</string>

    <!--Transfer executor thread count-->
    <integer name="transfer_threads">2</integer>

    <!--Connection timeout (seconds)-->
    <integer name="connect_timeout">15</integer>

    <!--Idle timeout for client activity (seconds)-->
    <integer name="idle_timeout">300</integer>

    <!--Send K-A keepalives-->
    <bool name="keep_alive_enabled">true</bool>

    <!--Interval to send K-A keepalives at-->
    <integer name="keep_alive_interval">120</integer>

    <!--WS connection idle timeout (msecs)-->
    <integer name="connection_idle_timeout">900000</integer>

    <!--Fixed reconnect backoff delay (secs)-->
    <item name="reconnect_backoff_fixed_delay" format="float" type="dimen">3.0</item>

    <!--Variable reconnect backoff delay - time factor (seconds)-->
    <item name="reconnect_backoff_variable_factor" format="float" type="dimen">1.0</item>

    <!--Variable reconnect backoff delay - time maximum (seconds)-->
    <item name="reconnect_backoff_variable_maximum" format="float" type="dimen">120.0</item>
</resources>
