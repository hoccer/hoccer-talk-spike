<resources>

    <style name="BaseTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">

        <item name="android:alertDialogTheme">@style/YourAlertDialogTheme</item>

        <item name="android:actionBarItemBackground">@drawable/selectable_background_appbasetheme</item>

        <item name="android:popupMenuStyle">@style/PopupMenu.AppBaseTheme</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.AppBaseTheme</item>

        <item name="android:textAppearanceLargePopupMenu">@style/PopupMenuTextAppearance.AppBaseTheme</item>

        <item name="android:textAppearanceSmallPopupMenu">@style/PopupMenuTextAppearance.AppBaseTheme</item>

        <item name="android:dropDownListViewStyle">@style/DropDownListView.AppBaseTheme</item>


        <item name="android:actionDropDownStyle">@style/DropDownNav.AppBaseTheme</item>

        <item name="android:actionBarStyle">@style/ActionBar.Solid.AppBaseTheme</item>

        <item name="android:actionBarTabTextStyle">@style/ActionBarTabText.Solid.AppBaseTheme</item>

        <item name="android:actionModeBackground">@drawable/cab_background_top_appbasetheme</item>

        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_appbasetheme</item>

        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.AppBaseTheme</item>

        <item name="android:actionOverflowButtonStyle">@style/OverFlow.AppBaseTheme</item>

        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.AppBaseTheme.Widget</item>

        <item name="android:checkboxStyle">@style/CheckBoxAppBaseTheme</item>

        <item name="android:buttonStyle">@style/ButtonAppBaseTheme</item>

        <item name="android:imageButtonStyle">@style/ImageButtonAppBaseTheme</item>

    </style>

    <style name="YourAlertDialogTheme" parent="android:Theme.Holo.Light.Dialog" >
        <item name="android:textColor">@color/primary</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>

    </style>

  </resources>