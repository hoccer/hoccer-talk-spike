<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|center_vertical"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@color/very_light_gray">

    <TextView
            android:id="@+id/eulaHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/eulaHeader"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

    <Button
            android:id="@+id/btn_accept_eula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_decline_eula"
            android:layout_alignBottom="@+id/btn_decline_eula"
            android:layout_alignParentEnd="true"
            android:text="@string/accept_eula"
            style="@style/ButtonAppBaseTheme"/>

    <Button
            android:id="@+id/btn_decline_eula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="@string/decline_eula"
            style="@style/ButtonAppBaseTheme"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_accept_eula"
            android:layout_below="@+id/eulaHeader"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/background_default">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/eulaText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/eulaText"
                    android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>