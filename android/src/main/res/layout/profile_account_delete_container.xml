<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tv_profile_account_delete_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_key_text"
            android:layout_marginLeft="@dimen/profile_text_margin"
            style="@style/BaseTheme.DescriptiveText"/>

    <View
            android:id="@+id/v_profile_account_delete_delimiter"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_profile_account_delete_text"
            android:background="#ffcdcdcd"/>

    <Button
            android:id="@+id/btn_profile_delete_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_profile_account_delete_delimiter"
            android:text="@string/button_delete_account_title"/>

</RelativeLayout>