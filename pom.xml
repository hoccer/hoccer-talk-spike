<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  
  <groupId>hoccer</groupId>
  <artifactId>hoccer-talk</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>Hoccer Talk</name>

  <packaging>pom</packaging>

  <modules>
    <module>srp</module>
    <module>common</module>
    <module>client</module>
    <module>server</module>
	<module>tool</module>
	<module>android</module>
  </modules>

  <properties>
      <java.version>1.6</java.version>
      <jetty.version>8.1.7.v20120910</jetty.version>
      <jackson.version>2.0.6</jackson.version>

      <junit.version>4.11</junit.version>
      <log4j.version>1.2.16</log4j.version>
      <metrics.version>2.2.0</metrics.version>
      <jcommander.version>1.30</jcommander.version>
      <bouncycastle.version>1.48</bouncycastle.version>

      <android.platform.version>4.2.2_r2</android.platform.version>
      <android.supportv4.version>12</android.supportv4.version>
      <actionbarsherlock.version>4.2.0</actionbarsherlock.version>
      <ormlite.version>4.43</ormlite.version>
  </properties>
  
  <distributionManagement>
    <repository>
      <id>hoccer.archiva.internal.releases</id>
      <url>https://archiva.hoccer.com/archiva/repository/internal-releases/</url>
    </repository>
    <snapshotRepository>
      <id>hoccer.archiva.internal.snapshots</id>
      <url>https://archiva.hoccer.com/archiva/repository/internal-snapshots/</url>
    </snapshotRepository>
  </distributionManagement>
  
  <repositories>
    <repository>
      <id>hoccer.archiva.releases</id>
      <name>Hoccer Public Releases</name>
      <url>https://archiva.hoccer.com/archiva/repository/releases/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>hoccer.archiva.snapshots</id>
      <name>Hoccer Public Snapshots</name>
      <url>https://archiva.hoccer.com/archiva/repository/snapshots/</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>hoccer.archiva.internal.releases</id>
      <name>Hoccer Internal Releases</name>
      <url>https://archiva.hoccer.com/archiva/repository/internal-releases/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>hoccer.archiva.internal.snapshots</id>
      <name>Hoccer Internal Snapshots</name>
      <url>https://archiva.hoccer.com/archiva/repository/internal-snapshots/</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>
  
</project>
